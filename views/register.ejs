<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>
<p class="redirect"> <em>Already have an account? <a href="/login" class="redirect">Login </em></a></p>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block social-button" id="google-connect" href="/auth/google" role="button">
            <!-- <i class="fab fa-google"></i> -->
            <span>Sign Up with Google </span>
          </a>
        </div>
        <div class="card-body">
          <a class="btn btn-block social-button" id="facebook-connect" href="/auth/facebook" role="button">
            <!-- <i class="fab fa-google"></i> -->
            <span>Sign Up with Facebook</span>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
